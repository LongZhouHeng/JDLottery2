<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/praise" />

            <gradient android:angle="270.0" android:endColor="@color/app_background_color" android:startColor="@color/app_background_color" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/app_background_color" android:startColor="@color/app_background_color" />

            <stroke android:width="1.0px" android:color="@color/praise" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/app_background_color" android:startColor="@color/app_background_color" />

            <stroke android:width="1.0px" android:color="@color/line" />
        </shape></item>

</selector>