<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/praise"
        android:visibility="gone" />

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar_5" >
    </include>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:paddingTop="10dp"
           android:paddingBottom="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="请描述你所遇到的问题:"
           android:layout_marginStart="10dp"
           android:textColor="#939191"
           />
   </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.jdruanjian.lottery.util.ControlNumEditText
          android:id="@+id/et"
          android:layout_width="fill_parent"
          android:layout_height="220dp"
          android:gravity="top"
          android:hint="留下您宝贵的意见哦，竭诚为您服务！"
          android:textSize="14sp"
          android:inputType="textMultiLine"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="10dp"
          android:padding="5dp"
          android:background="@drawable/bg_feedback_full"
          />

      <TextView
          android:id="@+id/tv_show"
          android:layout_width="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_height="wrap_content"
          android:textColor="#000000"
          android:layout_alignBottom="@id/et"
          android:layout_marginBottom="10dp"
          android:layout_marginRight="15dp"
          android:text="200"/>
  </RelativeLayout>
<Button
    android:id="@+id/btn_refer_message"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_button_full_2"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:text="提交反馈"
    android:textColor="@color/white"
    android:textSize="16sp"
    />
<RelativeLayout
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    >

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="软件客服QQ："
        />
    <TextView
        android:id="@+id/QQ_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_1"
        android:layout_marginStart="15dp"
        android:text="22222"
        />
</RelativeLayout>

</LinearLayout>
