<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone" />

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar_result_1" >
    </include>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/app_background_color"
    />
    <RelativeLayout
        android:id="@+id/alipay_put"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/im_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pc_appay"
            android:layout_centerVertical="true"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/im_2"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现到支付宝"
                android:textSize="@dimen/text_size_16"
                />
            <TextView
                android:id="@+id/tv_123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="支付宝用户使用"
                android:layout_below="@+id/tv_pay"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                />


            <ImageButton
                android:id="@+id/im_check_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                android:background="@drawable/bg_select"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background_color"/>
    <RelativeLayout
        android:id="@+id/bank_put"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/iv_my_messge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bank" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_my_messge"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现到银行卡"
                android:textSize="@dimen/text_size_16"
                />
            <TextView
                android:id="@+id/tv_1234"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="银行卡用户使用"
                android:layout_below="@+id/tv_bank"
                android:layout_marginTop="5dp"
                />

            <ImageButton
                android:id="@+id/im_check_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:clickable="false"
                android:background="@drawable/bg_select"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background_color"
        />
</LinearLayout>
