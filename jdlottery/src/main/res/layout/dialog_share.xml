<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@color/line"
        android:orientation="vertical"
        android:paddingTop="10dp"
        >

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="选择要分享到的平台"
            android:textColor="#555555" />

        <ImageView
            android:id="@+id/share_wechat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_share"
            android:layout_marginStart="15dp"
            android:background="@drawable/share_backgroud"
            android:src="@drawable/umeng_socialize_wechat"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_wechat"
            android:layout_marginStart="15dp"
            android:text="微信"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#555555"
            />

        <ImageView
            android:id="@+id/share_wxcircle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_share"
            android:layout_toRightOf="@+id/share_wechat"
            android:background="@drawable/share_backgroud"
            android:src="@drawable/umeng_socialize_wxcircle"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_wxcircle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_wxcircle"
            android:layout_marginStart="20dp"
            android:text="朋友圈"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_wechat"
            android:textColor="#555555"
            />
        <ImageView
            android:id="@+id/share_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_share"
            android:layout_toRightOf="@+id/share_wxcircle"
            android:background="@drawable/share_backgroud"
            android:src="@drawable/umeng_socialize_qq"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_qq"
            android:layout_marginStart="20dp"
            android:text="QQ"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_wxcircle"
            android:textColor="#555555"
            />
        <ImageView
            android:id="@+id/share_qzone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_share"
            android:layout_toRightOf="@+id/share_qq"
            android:background="@drawable/share_backgroud"
            android:src="@drawable/umeng_socialize_qzone"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_qzone"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_qzone"
            android:layout_marginStart="20dp"
            android:text="QQ空间"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_qq"
            android:textColor="#555555"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_share"
            android:layout_toRightOf="@id/share_qzone"
            android:background="@drawable/share_backgroud"
            android:src="@drawable/umeng_socialize_more"
            android:textSize="20sp" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/share_qzone"
            android:layout_marginStart="20dp"
            android:text="更多"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_qzone"
            android:textColor="#555555"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="取消分享"
                android:textColor="#626161"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>