<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:background="@color/white"
        >
        <com.jdruanjian.lottery.view.ImageViewCanvas
            android:id="@+id/me_imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:src="@drawable/im_tou"
            app:border_color="#EBEBEB"
            app:border_width="2dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/me_imageView"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="叶葬花"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_teamtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_uname"
                android:text="2017-09-25 14:54"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
