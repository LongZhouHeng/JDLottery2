<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="10dp"
      android:paddingTop="5dp"
      android:paddingBottom="5dp"
      android:background="@color/white"
      >

      <TextView
          android:id="@+id/withdraw_method"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="体现到支付宝"
          />
      <TextView
          android:id="@+id/withdraw_time"
          android:layout_marginTop="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/withdraw_method"
          android:text="2017-10-17"
          />

      <TextView
          android:id="@+id/withdraw_info"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/withdraw_method"
          android:layout_marginStart="10dp"
          tools:ignore="RelativeOverlap"
          android:gravity="right"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:layout_marginEnd="80dp"
          />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:layout_marginEnd="10dp"
          android:orientation="horizontal"

          >
          <TextView
              android:id="@+id/withdraw_money"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="0.1"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="元"
              />
      </LinearLayout>
  </RelativeLayout>

</LinearLayout>
