<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/praise"
        >
        <LinearLayout
            android:id="@+id/iv_title"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/im_mind"
                />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="19dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_login_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"
                android:text="已登录"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/me_bag_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="精彩计划"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            />
      <RelativeLayout
          android:id="@+id/iv_qiandao"
          android:layout_width="120dp"
          android:layout_height="match_parent"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          >
          <ImageView
              android:id="@+id/iv_1"
              android:layout_marginRight="20dp"
              android:layout_alignParentEnd="true"
              android:layout_width="22dp"
              android:layout_height="22dp"
              android:layout_marginTop="3dp"
              android:background="@drawable/im_sign_in"
              />


              <TextView
                  android:id="@+id/tv_sign"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="19dp"
                  android:text="签到"
                  android:textSize="12sp"
                  android:textColor="@color/white"
                  android:layout_alignParentEnd="true"
                  android:layout_below="@+id/iv_1"
                  />

              <TextView
                  android:id="@+id/tv_sign_1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="14dp"
                  android:text="已签到"
                  android:textSize="12sp"
                  android:textColor="@color/white"
                  android:layout_alignParentEnd="true"
                  android:layout_below="@+id/iv_1"
                  android:visibility="gone"
                  />


      </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>